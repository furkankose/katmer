{
  "compilerOptions": {
    "composite": true,
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "allowJs": true,
    "downlevelIteration": true,
    "types": ["bun", "vitest/importMeta", "vitest"],
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@common/*": ["./common/*"],
      "@type": ["./types"],
      "@type/*": ["./types/*"]
    }
  },
  "include": ["server", "common", "cli", "config", "types", "*.ts"]
}
