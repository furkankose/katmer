{
  "name": "katmer",
  "version": "1.0.0",
  "type": "module",
  "description": "",
  "main": "dist/index.js",
  "workspaces": [
    "packages/*",
    "providers/*",
    "runtimes/*"
  ],
  "scripts": {
    "dev": "bun --watch ./scripts/dev.ts",
    "dev:server": "bun run --watch packages/core/index.ts",
    "dev:ui": "vite -l error packages/installer",
    "generate:docs": "bun run scripts/generate-module-docs.ts",
    "build": "bun --filter '*' build",
    "lint:format": "prettier --ignore-unknown --write --log-level error .",
    "lint:oxlint": "oxlint . --fix --fix-suggestions --fix-dangerously -c .oxlintrc.json --ignore-path .gitignore",
    "lint:eslint": "eslint . --fix",
    "lint": "bun run lint:format && bun run lint:oxlint && bun run lint:eslint",
    "prepare": "bun .husky/install.mjs || true",
    "release": "bun scripts/release.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@microsoft/api-documenter": "^7.28.2",
    "@microsoft/api-extractor": "^7.55.2",
    "@microsoft/tsdoc": "^0.16.0",
    "@prettier/plugin-oxc": "^0.1.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.0.5",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/language-server": "^3.2.2",
    "ajv": "^8.17.1",
    "colors": "^1.4.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^9.39.2",
    "eslint-plugin-oxlint": "^1.38.0",
    "eslint-plugin-vue": "^10.6.2",
    "execa": "^9.6.1",
    "fs-extra": "^11.3.3",
    "husky": "^9.1.7",
    "jsdoc-api": "^9.3.5",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.38.0",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "prompts": "^2.4.2",
    "semantic-release": "^25.0.2",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write --log-level error",
    "*.{js,jsx,ts,tsx,md,html,css,vue,astro}": [
      "oxlint -c .oxlintrc.json --ignore-path .gitignore",
      "eslint --fix --max-warnings=0 --no-warn-ignored"
    ]
  },
  "trustedDependencies": [
    "cpu-features"
  ],
  "private": true
}
